{{#if user}}
    <h2>Welcome, {{ user.username }}!</h2>
    <p>This is your profile page my friend! And your email is: {{ user.email }}</p>
{{else}}
    <p>Still no logged in user, sorry!</p>
{{/if}}
<!-- esto irÃ­a en su propia vista -->
<h2> it allows the user to upload a profile picture.</h2>
<div class="row">
  <div class="col-md-6">
    <form action="/posts/create" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <label for="title-input">Title:</label>
        <input type="text" name="title" id="title-input" class="form-control" />
      </div>

      <div class="form-group">
        <label for="description-input">Description:</label>
        <textarea name="description" id="description-input" cols="30" rows="4" class="form-control"> </textarea>
      </div>

      <div class="form-group">
        <label for="image-input">Image:</label>
        <input type="file" name="image" id="image-input" class="form-control-file" />
      </div>

      <button type="submit" class="btn btn-primary">Create</button>
    </form>
  </div>
</div>
